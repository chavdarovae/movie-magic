{{#if showSearch}}
    <section id="search">
        <h1>Search</h1>
        <form method="GET" class="form">
            <input type="text" class="search" name="title" placeholder="Title..." value="{{query.title}}">
            <input type="text" name="genre" class="genre" placeholder="Genre..." value="{{query.genre}}">
            <input type="number" name="year" class="year" placeholder="Year..." value="{{query.year}}">
            <input type="submit" value="search">
        </form>
    </section>
{{/if}}

<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">
        <!-- If there are posts for creature in the database display each of them -->
        {{#each movies}}
           {{>movie}}
        {{else}}
        <!-- If there are still no posts in the database display: -->
        <div class="no-posts">
            <p class="no-offer">There are no movies yet...</p>
        </div>
        {{/each}}
    </div>
</section>